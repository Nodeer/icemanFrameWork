<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.iceman.yangtze"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical">

    <com.iceman.yangtze.widget.XsTitleView
            android:id="@+id/title_view"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            app:title_btn_text="注销"
            app:title_text="功能主页">
    </com.iceman.yangtze.widget.XsTitleView>

    <com.iceman.yangtze.widget.FragmentTabHost
            android:id="@+id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <FrameLayout
                android:id="@+id/tab_host_continar"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1">
        </FrameLayout>
        <LinearLayout
                android:id="@+id/tab_host_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tab_score"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="成绩"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:background="@drawable/home_btn_bg"
                    android:textColor="@drawable/home_btn_text_color"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    />

            <TextView
                    android:id="@+id/tab_timetable"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="课表"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:background="@drawable/home_btn_bg"
                    android:textColor="@drawable/home_btn_text_color"
                    android:textSize="12dp"
                    android:gravity="center"/>

            <TextView
                    android:id="@+id/tab_student"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="学生"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:background="@drawable/home_btn_bg"
                    android:textColor="@drawable/home_btn_text_color"
                    android:textSize="12dp"
                    android:gravity="center"/>

            <TextView
                    android:id="@+id/tab_mine"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="我的"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:background="@drawable/home_btn_bg"
                    android:textColor="@drawable/home_btn_text_color"
                    android:textSize="12dp"
                    android:gravity="center"/>
        </LinearLayout>


    </com.iceman.yangtze.widget.FragmentTabHost>


</LinearLayout><!-- From: file:/D:/IdeaProjects/icemanFrameWork/icemanFrame/res/layout/homepage_layout.xml -->